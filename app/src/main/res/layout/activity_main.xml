<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context="com.ireport.activities.MainActivity">

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:textAppearance="@android:style/TextAppearance.Material.Display3" />

    <LinearLayout
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_vertical"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:weightSum="1">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/emailLogin"
            android:text="@string/emailSignIn"
            android:layout_gravity="center_horizontal"
            tools:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/signUp"
            android:text="@string/signUp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/holo_purple"
            android:elevation="24dp"
            tools:textColor="@android:color/background_light"
            tools:backgroundTint="@android:color/holo_purple" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/forgotPassword"
            android:text="@string/forgotPassword"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/holo_green_dark"
            android:elevation="24dp"
            tools:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>
